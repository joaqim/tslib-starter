{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "lib/esm",
    "baseUrl": "src",
    "paths": { "src/*": ["src/*"] },
    "allowJs": true,
    "lib": ["ES6", "DOM", "ES2016", "ES2017"],
    "jsx": "react",
    "types": ["jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "docs"],
  "typedocOptions": {
    "out": "docs",
    "entryPoints": "src/index.tsx",
    "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "node_modules"]
  }
}
